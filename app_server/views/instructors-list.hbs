  <!--S e a r c h  b a r-->
  <div class="input-group mb-3 container">
    <input id="search" onkeyup="isci()" type="text" class="form-control" placeholder="Poišči inštruktorja..."
      aria-label="Iskanje" aria-describedby="search-button">
    <div class="input-group-append">
      <button class="btn btn-outline-secondary btn-info" type="button" id="search-button">Išči</button>
    </div>
  </div>

  <!--I n s t r u c t o r s-->
  <div id="instructors" class="container">

    {{#if sporocilo}}
    <div class="alert alert-warning container" style="margin-top: 2rem">{{sporocilo}}</div>
    {{/if}}

    {{#each instruktorji as |instruktor|}}
    {{#if statusInstruktorja}}
    <div class="card instructor" style="width: 18rem;">
      <img class="card-img-top" src="../../assets/thumbnails/blue.png" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title" style="overflow: hidden; text-overflow: ellipsis;">{{instruktor.ime}} {{instruktor.priimek}}</h5>
        <a href="/uporabniki/{{instruktor._id}}" class="btn btn-primary">Preveri profil</a>
      </div>
    </div>
    {{/if}}
    {{/each}}

  </div>

  <hr>

  {{> carousel_getstarted}}

<script>
  function isci() {
    // Declare variables
    var filter, list, a, txtValue, search;


    //ul = document.getElementById("myUL");
    //li = ul.getElementsByTagName('li');

    search = document.getElementById("search");
    list = document.getElementsByClassName("card");

    filter = search.value.toUpperCase();

    // Loop through all list items, and hide those who don't match the search query
    for (i = 0; i < list.length; i++) {
      a = list[i].getElementsByClassName("card-title")[0];
      txtValue = a.textContent || a.innerText;
      if (txtValue.toUpperCase().indexOf(filter) > -1) {
        list[i].style.display = "";
      } else {
        list[i].style.display = "none";
      }
    }
  }
</script>


